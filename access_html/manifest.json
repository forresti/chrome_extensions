{
    "manifest_version": 2,
    "name":    "Get HTML example",
    "version": "0.0",

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["*"],
        "js":      ["content.js"]
    }],
    "browser_action": {
        "default_title": "Get HTML example"
    },

    "permissions": ["activeTab"]
}
